<h2 class="mb-3">Contact List</h2>
<a href="/contact/add" class="btn btn-primary mb-3">
  <i class="bi bi-person-plus"></i> Add Data
</a>

<% if (msg.length !== 0) { %>
<div class="alert alert-success" role="alert"><%= msg %></div>
<% } %>

<div class="table-responsive">
  <table class="table table-striped table-hover border rounded-3">
    <thead class="table-dark">
      <tr>
        <th>No</th>
        <th><i class="bi bi-person"></i> Name</th>
        <th><i class="bi bi-telephone"></i> No HP</th>
        <th><i class="bi bi-person-badge"></i> Nickname</th>
        <th><i class="bi bi-envelope"></i> Email</th>
        <th class="action-column"><i class="bi bi-gear"></i> Action</th>
      </tr>
    </thead>
    <tbody>
      <% contacts.forEach((contact, index) => { %>
      <tr>
        <td data-label="#"><%= index + 1 %></td>
        <td data-label="Name"><%= contact.name %></td>
        <td data-label="No HP"><%= contact.nohp %></td>
        <td data-label="Nickname"><%= contact.nickname %></td>
        <td data-label="Email"><%= contact.email %></td>
        <td data-label="Action" class="action-column">
          <div class="btn-group gap-2">
            <a href="/contact/<%= contact.name %>" class="btn btn-info btn-sm">
              <i class="bi bi-info-circle"></i>
            </a>
            <a
              href="/contact/edit/<%= contact.name %>"
              class="btn btn-warning btn-sm"
            >
              <i class="bi bi-pencil-square"></i>
            </a>
            <form
              action="/contact?_method=DELETE"
              method="POST"
              class="d-inline"
              onsubmit="return confirm('Are you sure?');"
            >
              <input type="hidden" name="name" value="<%= contact.name %>" />
              <button type="submit" class="btn btn-danger btn-sm">
                <i class="bi bi-trash"></i>
              </button>
            </form>
          </div>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
