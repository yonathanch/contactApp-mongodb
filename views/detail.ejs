<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4 fw-bold">Contact Detail</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i> Contact data is missing
        <a href="/contact" class="alert-link">Back to Contact Page</a>
      </div>
      <% } else { %>
      <div class="card rounded-4">
        <div class="card-body">
          <h5 class="card-title fw-bold fs-4 text-primary">
            <i class="bi bi-person-circle"></i> <%= contact.name %>
          </h5>
          <p class="card-subtitle mb-2">
            Nickname: <%= contact.nickname %> <i class="bi bi-person"></i>
          </p>
          <h6 class="card-subtitle mb-2 text-muted fs-6">
            <i class="bi bi-telephone"></i> <%= contact.nohp %>
          </h6>
          <p class="card-text text-secondary">
            <i class="bi bi-envelope"></i> <%= contact.email %>
          </p>
          <div class="d-flex gap-2 mt-3">
            <a
              href="/contact/edit/<%= contact.name %>"
              class="btn btn-warning px-4"
            >
              <i class="bi bi-pencil-square"></i> Edit
            </a>
            <form
              action="/contact?_method=DELETE"
              method="POST"
              onsubmit="return confirm('Sure?');"
            >
              <input type="hidden" name="name" value="<%= contact.name %>" />
              <button type="submit" class="btn btn-danger px-4">
                <i class="bi bi-trash"></i> Delete
              </button>
            </form>
          </div>
          <a
            href="/contact"
            class="btn btn-link text-decoration-none mt-4 d-block"
          >
            &laquo; Back to Contact Page
          </a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
